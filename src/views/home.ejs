    <div class="near-res-container">
        <h1>Top Restaurants Near You</h1>
        <ul class="res-info-list">
            <% nearRes.forEach((res) => { %>
                <li class="res-card">
                    <img src="/<%= res.images[0] %>" alt="restaurant photo">
                    <div class="res-info">
                        <p class="res-name"><a href="/restaurant/<%= res.id %>"><%= res.name%></a></p>
                        <div class="res-delivery">
                            <span><%= res.distanceMiles%> miles</span> •
                            <span><%= res.deliveryTimeMinutes%> mins</span> •
                            <span><%= res.deliveryFee%> mins</span>
                        </div>
                        <p class="open-status"><%= res.isOpen ? 'Open' : 'Closed' %></p>
                        <button class="heart-btn" data-id = ${rest.id}>
                            <svg
                            class="heart"
                            viewBox="0 0 24 24"
                            width="24"
                            height="24"
                            >
                            <path d="M12 21s-6.7-4.35-9.33-7.35C-1.33 9.65 1.34 3 6.67 3c2.35 0 4.33 1.5 5.33 3 1-1.5 2.98-3 5.33-3 5.33 0 8 6.65 4 10.65C18.7 16.65 12 21 12 21z"/>
                            </svg>
                        </button>
                    </div>
                </li>
